# Twitch Configuration
TWITCH_CLIENT_ID=your_client_id
TWITCH_CLIENT_SECRET=your_client_secret
TWITCH_ACCESS_TOKEN=your_access_token
TWITCH_REFRESH_TOKEN=your_refresh_token
TWITCH_CHANNELS=channel1,channel2
BROADCASTER_USER_ID=your_broadcaster_id
TWITCH_REDIRECT_URI=http://localhost:3000/auth/callback
BOT_NICK=TatsLuna
COMMAND_PREFIX=#

# API Keys
YOUTUBE_API_KEY=your_youtube_api_key
OPENAI_API_KEY=your_openai_api_key
API_STEAM_KEY=your_steam_api_key
WEATHER_API_KEY=your_weather_api_key
NUULS_API_KEY=your_nuuls_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# Database Configuration
DB_PATH=./data/bot.db
DB_TIMEOUT=5000
DB_MAINTENANCE_ENABLED=true
MESSAGE_RETENTION_DAYS=7

# Logging Configuration
LOG_LEVEL=info
FILE_LOGGING=true
LOG_PATH=logs
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# Web Panel Configuration
WEB_PANEL_PORT=3069
WEB_PANEL_PASSWORD=changeme
CORS_ENABLED=false
CORS_ORIGIN=*

# Feature Flags
ENABLE_STREAM_MONITORING=true
ENABLE_AUTO_RECONNECT=true
ENABLE_MESSAGE_LOGGING=true
ENABLE_CLAUDE=true
ENABLE_WEB_PANEL=true

# Rate Limiting
CHAT_RATE_LIMIT_COUNT=20
CHAT_RATE_LIMIT_WINDOW=30000
JOIN_RATE_LIMIT=1200
RATE_LIMIT_DELAY=1200
MOD_RATE_LIMIT_DELAY=100

# Cache Configuration
CACHE_TTL=300
CACHE_CHECK_PERIOD=60
CACHE_MAX_SIZE=1000

# Optional Configuration
# SESSION_SECRET=your_session_secret  # Will be auto-generated if not provided
# GOOGLE_SHEET_ID=your_sheet_id      # Optional Google integration
# GOOGLE_CREDENTIALS_FILE=creds.json  # Optional Google integration
# GOOGLE_SCRIPT_ID=your_script_id    # Optional Google integration

# Event Service Configuration
EVENT_RATE_LIMIT=1200
EVENT_CHECK_INTERVAL=60000
STREAM_ANALYSIS_INTERVAL=600000
EVENT_QUEUE_SIZE=1000
EVENT_RETRY_ATTEMPTS=3
EVENT_RETRY_DELAY=5000
